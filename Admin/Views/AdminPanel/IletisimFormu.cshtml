@model PagedList.Core.PagedList<Data.Domain.Contact>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *,PagedList.Core.Mvc
@{
    ViewData["Title"] = "İletişim Formu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Contact = "active";
}


    <div class="container" style="width:100%">
        <div class="row">
            <div class="col-md-12">
                <div id="tabid1">
                    <div class="dashboard-content" style="padding: 0px 0px 0px 0px;margin-left: 0px">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-xs-12">
                                <div class="dashboard-list-box">
                                    <h4 class="gray">İletişim Formu</h4>
                                    <div class="table-box">
                                        <table class="basic-table booking-table">
                                            <thead>
                                                <tr>
                                                    <th>Ad Soyad</th>
                                                    <th>Telefon</th>
                                                    <th>Mail</th>
                                                    <th>Tarih</th>
                                                    <th>Konu</th>
                                                    <th>Mesaj</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.Count == 0)
                                                {
                                                    <tr>
                                                        <td>-</td>
                                                        <td>-</td>
                                                        <td>-</td>
                                                        <td>-</td>
                                                        <td>-</td>
                                                        <td>-</td>
                                                    </tr>
                                                }
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.Name</td>
                                                        <td>@item.Phone</td>
                                                        <td>@item.Mail</td>
                                                        <td>@item.IDate</td>
                                                        <td>@item.Subject</td>
                                                        <td>@item.Message</td>

                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 sayfalama">
                <div class="sayfalama-bilgi">Toplam <span>@Model.TotalItemCount</span> Kayıt Bulunuyor. Şu anda <span>@Model.FirstItemOnPage</span> - <span>@Model.LastItemOnPage</span> Arasındaki Kayıtlar Gösteriliyor. </div>

                <pager list="@Model" asp-controller="AdminPanel" options="@PagedList.Core.Mvc.PagedListRenderOptions.Bootstrap4PageNumbersOnly" asp-action="IletisimFormu" />
            </div>
        </div>
    </div>




