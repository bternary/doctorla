        </ul>
    </div>
</div>

<div id="kodvideo" class="modal" tabindex="-1" role="dialog">
    @* Randevu Oluştur Video *@
    <div class="modal-dialog" style="margin-top: 10%;" role="document">
        <div class="modal-content">
            <video class="randevuvideo" style="width: 100%;  height: 100%;" id="kodvideoplayer" controls><source src="~/images/doktorkod.mp4" type="video/mp4">Tarayıcınız Bu Dosya Türünü Desteklemiyor</video>
        </div>
    </div>
</div>


<script>
    function kodvideo() {
        $('#kodvideo').modal('show')
    }

</script>