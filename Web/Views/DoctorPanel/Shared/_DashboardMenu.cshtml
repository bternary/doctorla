
<div class="dashboard-sticky-nav" id="dashboard-sticky-nav">
    <div class="content-left pull-left">
        <h2><a href="/" class="white">Doctorla</a></h2>
    </div>
    <div class="content-right pull-right">
        <div class="search-bar s">
            <form action="/DoctorPanel/GecmisRandevular" method="get">
                <div class="form-group">
                    <div class="col-sm-12 doctor-panel-search">
                        <input type="text" class="form-control" id="searchuser" placeholder="Hasta Ara" name="name">
                        <button type="submit" style="cursor:pointer"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </div>
                </div>
            </form>
        </div>

        <div class="dropdown b1">
            <a class="dropdown-toggle" data-toggle="dropdown">
                <div class="dropdown-item">
                    <i class="sl sl-icon-envelope-open"></i>
                    <span class="notify">0</span>
                </div>
            </a>
            <div class="dropdown-menu notification-menu dropdown-menu-right">
                <ul>
                    <li>
                        <a href="#">
                            <div class="notification-item">
                                <div class="notification-image">
                                    <i class="sl sl-icon-envelope-open"></i>
                                </div>
                                <div class="notification-content">
                                    <p>Mesajınız Bulunmamaktadır.</p>
                                </div>
                            </div>
                        </a>
                    </li>

                </ul>
                @*<p class="all-noti"><a href="#">See all messages</a></p>*@
            </div>
        </div>
        <div class="dropdown b2" id="bildirimler">
            <a class="dropdown-toggle" data-toggle="dropdown">
                <div class="dropdown-item">
                    <i class="sl sl-icon-envelope-open"></i>
                    <span class="notify">0</span>
                </div>
            </a>
            <div class="dropdown-menu notification-menu dropdown-menu-right">
                <ul>
                    <li>
                        <a href="#">
                            <div class="notification-item">
                                <div class="notification-image">
                                    <i class="fa fa-envelope-o"></i>
                                </div>
                                <div class="notification-content">
                                    <p>Bildirim Bulunmamaktadır.</p>
                                </div>
                            </div>
                        </a>
                    </li>

                </ul>
                @*<p class="all-noti"><a href="#">See all messages</a></p>*@
            </div>
        </div>
        <div class="dropdown p">
            <a class="dropdown-toggle" data-toggle="dropdown">
                <div class="profile-sec">
                    <div class="dash-image">
                        <i class="fa fa-user"></i>
                    </div>
                    <div class="dash-content">
                        <h4>@User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Name).Value</h4>
                        <span>Ünvan : @ViewBag.doctorTitle</span>
                        <span>Kod : @User.Claims.FirstOrDefault(d => d.Type == "doctorCode").Value <i class="fa fa-question-circle" onclick="kodvideo()"></i></span>
                    </div>
                </div>
            </a>

        </div>
    </div>
</div>
<a href="#" class="dashboard-responsive-nav-trigger"><i class="fa fa-reorder"></i> Menü</a>

<div class="dashboard-nav" style="z-index:0 !important;">
    <div class="dashboard-nav-inner">
        <ul>
            <li class="@ViewBag.Anasayfa"><a href="/DoctorPanel/Anasayfa"><i class="sl sl-icon-settings"></i> Anasayfa</a></li>
            <li class="@ViewBag.Profilim"><a href="/DoctorPanel/Profilim"><i class="sl sl-icon-user"></i> Profilim</a></li>

            <li class="@ViewBag.GecmisRandevular"><a href="/DoctorPanel/GecmisRandevular"><i class="sl sl-icon-list"></i>Randevularım</a></li>
            <li class="@ViewBag.GecmisPaketler"><a href="/DoctorPanel/GecmisPaketler"><i class="sl sl-icon-list"></i>Paketler</a></li>

            @*<li>
                    <a><i class="sl sl-icon-layers"></i> Makale Listesi</a>
