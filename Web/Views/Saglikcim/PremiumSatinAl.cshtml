                height: 2px;
                width: 110%;
                top: 50%;
                left: 0;
                background-color: #00A3C8;
            }

        .premium-fiyat .gecmis-fiyat {
        }

    .premium-paketleri {
        font-size: 4rem;
        text-align: center;
    }

        .premium-paketleri h1 {
            color: #00A3C8;
        }

    .premium-card {
        border-color: #f0a500 !important;
        box-shadow: 0 4px 8px 0 #f0a500 !important;
        position: relative;
    }

        .premium-card:before {
            font-family: FontAwesome;
            content: "\f005 \f005 \f005";
            position: absolute;
            left: 50%;
            top: -23px;
            color: #f0a500;
            font-size: 2rem;
